{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["./entities/*"],
      "@exceptions/*": ["./exceptions/*"]
    }
  }
}
